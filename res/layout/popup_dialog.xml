<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/round_corner_shape"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="12dp" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/app_name"
        android:paddingLeft="12dp"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/contain"
        android:layout_marginTop="10dp"
        android:background="@color/quick_login_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_nagative"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/popup_dialog_left"
            android:text="cancel"
            android:textColor="@color/text_red"
            android:textSize="@dimen/text_18" />

        <View
            android:id="@+id/button_divider"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/quick_login_divider" />

        <Button
            android:id="@+id/dialog_positive"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/popup_dialog_right"
            android:text="ok"
            android:textColor="@color/text_red"
            android:textSize="@dimen/text_18" />
    </LinearLayout>

</RelativeLayout>